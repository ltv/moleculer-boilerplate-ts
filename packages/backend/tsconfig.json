{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2019",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "shared/*": ["shared/*"],
      "services/*": ["services/*"]
    },
    "typeRoots": ["../../node_modules/@types", "node_modules/@types", "shared/@types"],
    "lib": [
      "es5",
      "es6",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "es2018",
      "es2020",
      "esnext.asynciterable"
    ]
  },
  "exclude": ["**/*.test.ts", "dist/**", "tests/**/*"],
  "ts-node": {
    "files": true
  },
}
